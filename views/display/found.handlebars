<section>
  <h2 class="center">Results for: {{searchDetails}}</h2>
  <ul>
    <div class="container mt-4">
      <div class="row mt-12 justify-content-center" data-masonry='{"percentPosition": true }'>
      {{#each activities}}
        <div class="card card-custom mx-2 mb-3">
          {{#if this.image_url}}
          <img class="card-img-top" src= {{this.image_url}} alt= {{this.name}} />
          {{else}}
          <img class="card-img-top" src= "https://jorgeraziel.com/wp-content/themes/consultix/images/no-image-found-360x260.png" alt="No Image Found" />
          {{/if}}
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">This is a wider card with supporting text below
              as a natural lead-in to additional content. This content is a
              little bit longer.</p>
            <a href="/activity/{{this.id}}">Learn More!</a>
          </div>
        </div>
            <!--
          <li>

            <a href="/activity/{{this.id}}">
              <div class="entry">
                <img src={{this.image_url}}>
                <span>{{this.name}}</span>
              </div>
            </a>
          </li>
          -->
      {{else}}
        <p class="error">We're sorry, but no results were found for
          {{searchDetails}}.</p>
      {{/each}}
      </div>
    </div>
  </ul>

  <a href="/">Make Another Search!</a>
</section>
